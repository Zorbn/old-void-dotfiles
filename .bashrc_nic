# Source this file from ~/.bashrc

alias vi="nvim"

alias top="htop"

export VISUAL=nvim
export EDITOR="$VISUAL"

export PS1="[\[$(tput sgr0)\]\[\033[38;5;4m\]\u\[$(tput sgr0)\]@\[$(tput sgr0)\]\[\033[38;5;5m\]\h\[$(tput sgr0)\] \W]\\$ \[$(tput sgr0)\]"

# Combine cd and ls into cl
cl() {
    if [[ -z "$1" ]]
    then
        cd
    else
        cd "$1"
    fi

    ls
}
